<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="video"
            type="com.example.movies.model.data.Video" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/betweenMargin"
        app:cardBackgroundColor="@color/light_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/betweenMargin"
                android:contentDescription="@string/play_description"
                android:src="@drawable/ic_play_circle" />

            <TextView
                android:id="@+id/videoNameTv"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{video.name}" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>